@model IEnumerable<btl.Models.LichLamViecParttimeDlcd>

@{
    ViewData["Title"] = "Index";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
</div>

<p>
    <a asp-action="Create" class="btn btn-info btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-plus-circle"></i>
        </span>
        <span class="text">Create New</span>
    </a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ngay_trong_tuan)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ca_trong_ngay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.thuong_theo_ca)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ghi_chu)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gio_nhan_ca)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gio_tan_ca)
                        </th>
                        <th>
                            Thao Tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ngay_trong_tuan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ca_trong_ngay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.thuong_theo_ca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ghi_chu)
                            </td>
                            <td>
                                <span>@item.gio_nhan_ca.ToString("HH:mm")</span>
                            </td>
                            <td>
                                <span>@item.gio_tan_ca.ToString("HH:mm")</span>
                            </td>
                            <td style="display: flex; justify-content: space-evenly">
                                @* <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-info btn-circle">
                                    <i class="fas fa-info-circle"></i>
                                    </a> *@
                                <a asp-action="Create" asp-controller="PhanCong" class="btn btn-info btn-circle">
                                    <i class="fas fa-address-card"></i>
                                </a>
                                <form method="post" asp-action="Delete" asp-route-ngay_trong_tuan="@item.ngay_trong_tuan"
                                asp-route-ca="@item.ca_trong_ngay">
                                    <input type="submit" value="X" class="btn btn-danger btn-circle" />
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
        </div>
    </div>
</div>