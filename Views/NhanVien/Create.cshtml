            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ten_nv" class="control-label"></label>
                <input asp-for="ten_nv" class="form-control form-control-user">
                <span asp-validation-for="ten_nv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ma_chi_nhanh" class="control-label"></label>
                <input asp-for="ma_chi_nhanh" class="form-control form-control-user">
                <span asp-validation-for="ma_chi_nhanh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ma_chuc_vu" class="control-label"></label>
                <input asp-for="ma_chuc_vu" class="form-control form-control-user">
                <span asp-validation-for="ma_chuc_vu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cmnd" class="control-label"></label>
                <input asp-for="cmnd" class="form-control form-control-user">
                <span asp-validation-for="cmnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gioi_tinh" class="control-label"></label>
                <input asp-for="gioi_tinh" class="form-control form-control-user">
                <span asp-validation-for="gioi_tinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ngay_sinh" class="control-label"></label>
                <input asp-for="ngay_sinh" class="form-control form-control-user">
                <span asp-validation-for="ngay_sinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dia_chi_nv" class="control-label"></label>
                <input asp-for="dia_chi_nv" class="form-control form-control-user">
                <span asp-validation-for="dia_chi_nv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sdt_nv" class="control-label"></label>
                <input asp-for="sdt_nv" class="form-control form-control-user">
