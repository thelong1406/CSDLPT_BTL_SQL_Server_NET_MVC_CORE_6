@model btl.Models.NhanVien

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Nhân Viên</h1>
        </div>
