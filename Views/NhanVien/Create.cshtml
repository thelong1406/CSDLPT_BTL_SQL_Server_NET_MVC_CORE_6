            <div class="form-group">
                <label asp-for="he_so_luong" class="control-label"></label>
                <input asp-for="he_so_luong" class="form-control form-control-user">
                <span asp-validation-for="he_so_luong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="anh_dai_dien" class="control-label"></label>
                <input asp-for="anh_dai_dien" class="form-control form-control-user">
                <span asp-validation-for="anh_dai_dien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-user btn-block" />
            </div>
            <span>@ViewBag.CreateFailed</span>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



