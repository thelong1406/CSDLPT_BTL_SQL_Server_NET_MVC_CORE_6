@model IEnumerable<btl.Models.KhachHang>

@{
    ViewData["Title"] = "Index";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
</div>

<p>
    <a asp-action="Create" class="btn btn-info btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-plus-circle"></i>
        </span>
        <span class="text">Create New</span>
    </a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ma_kh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ma_chi_nhanh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ten_kh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sdt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tich_luy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ngay_tham_gia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dia_chi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gioi_tinh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ngay_sinh)
                        </th>
                        <th>
                            Thao Tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ma_kh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ma_chi_nhanh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ten_kh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sdt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tich_luy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ngay_tham_gia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dia_chi)
                            </td>
                            <td>
                                @if (item.gioi_tinh)
                                {
                                    <span>Nam</span>
                                }
                                else
                                {
                                    <span>Nữ</span>
                                }
                                @* @Html.DisplayFor(modelItem => item.gioi_tinh) *@
                            </td>
                            <td>
                                @* @Html.DisplayFor(modelItem => item.ngay_sinh) *@
                                <span>@item.ngay_sinh.ToString("dd-MM-yyyy")</span>
                            </td>
                            <td style="display: flex; justify-content: space-evenly">
                                <a asp-action="Edit" asp-route-id="@item.ma_kh" class="btn btn-info btn-circle">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <form method="post" asp-action="Delete" asp-route-id="@item.ma_kh">
                                    <input type="submit" value="X" class="btn btn-danger btn-circle" />
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
        </div>
    </div>
</div>