@model btl.Models.BackupDoanhThu

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Charts</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body>
    <h1 class="h3 mb-2 text-gray-800">Báo cáo doanh thu trong ngày</h1>
    <p class="mb-4">Hôm nay @Html.DisplayFor(Model => Model.ngay) hoạt động kinh doanh được hiển trị bằng các biểu đồ.</p>

    <!-- Content Row -->
    <div class="row">

        <div class="col-xl-8 col-lg-7">

            <!-- Area Chart -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Doanh thu biểu đồ miền @Html.DisplayFor(Model => Model.ngay)</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart">
                            <p id="myAreaChart-d1" value="@Model.ban_hang" title="Bán hàng"></p>
                            <p id="myAreaChart-d2" value="@Model.chi" title="Chi"></p>
                            <p id="myAreaChart-d3" value="@Model.nhap_nl" title="Nhập NL"></p>
                            <p id="myAreaChart-d4" value="@Model.phu_thu" title="Phụ Thu"></p>
                            <p id="myAreaChart-d5" value="@Model.loi_nhuan" title="Lợi Nhuận"></p>
                        </canvas>
                    </div>
                    <hr>
                </div>
            </div>

            <!-- Bar Chart -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Doanh thu biểu đồ cột @Html.DisplayFor(Model => Model.ngay)</h6>
                </div>
                <div class="card-body">
                    <div class="chart-bar">
                        <canvas id="myBarChart">
                            <p id="myBarChart-b1" value="@Model.ban_hang" title="Bán hàng"></p>
                            <p id="myBarChart-b2" value="@Model.chi" title="Chi"></p>
                            <p id="myBarChart-b3" value="@Model.nhap_nl" title="Nhập NL"></p>
                            <p id="myBarChart-b4" value="@Model.phu_thu" title="Phụ Thu"></p>
                            <p id="myBarChart-b5" value="@Model.loi_nhuan" title="Lợi Nhuận"></p>
                        </canvas>
                    </div>
                    <hr>
                </div>
            </div>

        </div>

        <!-- Donut Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Doanh thu biểu đồ tròn @Html.DisplayFor(Model => Model.ngay)</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-pie pt-4">
                        <canvas id="myPieChart">
                            <p id="myPieChart-p1" value="@Model.ban_hang" title="Bán hàng"></p>
                            <p id="myPieChart-p2" value="@Model.phu_thu" title="Phụ thu"></p>
                            <p id="myPieChart-p3" value="@Model.loi_nhuan" title="Lợi Nhuận"></p>
                        </canvas>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/chart-area-demo.js"></script>
    <script src="~/js/demo/chart-pie-demo.js"></script>
    <script src="~/js/demo/chart-bar-demo.js"></script>
</body>